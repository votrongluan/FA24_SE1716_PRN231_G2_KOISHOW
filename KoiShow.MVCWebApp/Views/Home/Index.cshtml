@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-start" style="height: 80vh; background-image: url('https://file.hstatic.net/1000310443/file/bieu-tuong-ca-chep-koi-lod2_73796644637c4628b7c1d14770a1c6fa_grande.png'); background-size: cover; background-position: center; border-radius: 40px" ">
    <div class="card p-4 shadow-lg" style="width: 50%; height: 50vh; margin-top: 10vh; background-color: rgba(255, 255, 255, 0.95); border-radius: 40px">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Login</h2>
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label for="Username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="Username" name="Username" required />
                </div>
                <div class="form-group mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="Password" name="Password" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
            </form>
        </div>
    </div>
</div>
