<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">Id</th>
                    <th class="card-title text-center">Contest Name</th>
                    <th class="card-title text-center">Title</th>
                    <th class="card-title text-center">Description</th>
                    <th class="card-title text-center">Start Date</th>
                    <th class="card-title text-center">End Date</th>
                    <th class="card-title text-center">Location</th>
                    <th class="card-title text-center">Competition Type</th>
                    <th class="card-title text-center">Participants</th>
                    <th class="card-title text-center">Image</th>
                    <th class="card-title text-center">Contact Info</th>
                    <th class="card-title text-center"></th>
                </tr>
            </thead>
            <tbody class="tblContests">
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(
            function() {
                loadData();
            }
        );

        function loadData() {
            alert("Load data progressing ...");

            $.ajax({
                url: 'https://localhost:7046/api/Contest',
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    alert('Server response: ' + result.message);
                    console.log(result);
                    var html = '';
                    $.each(result.data, function (key, item) {
                        html += '<tr>';
                        html += '<td>' + item.id + '</td>';
                        html += '<td>' + item.contestName + '</td>';
                        html += '<td>' + item.title + '</td>';
                        html += '<td>' + item.description + '</td>';
                        html += '<td>' + item.startDate + '</td>';
                        html += '<td>' + item.endDate + '</td>';
                        html += '<td>' + item.location + '</td>';
                        html += '<td>' + item.competitionType + '</td>';
                        html += '<td>' + item.participants + '</td>';
                        html += '<td>' + item.image + '</td>';
                        html += '<td>' + item.contactInfo + '</td>';
                        html += '<td></td>';
                        html += '</tr>';
                    });
                    $('.tblContests').html(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            });
        }
    </script>
}