@model KoiShow.Data.Models.ContestResult

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="table-responsive">
    <table class="table table-bordered shadow-lg" style="border-radius: 10px; overflow: hidden;">
        <thead class="bg-primary text-white">
            <tr>
                <th style="width: 400px;" class="text-center">Field</th>
                <th class="text-center">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-light">
                <td><strong>Contest Result Name</strong></td>
                <td>@Html.DisplayFor(model => model.ContestResultName)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Description</strong></td>
                <td>@Html.DisplayFor(model => model.ContestResultDescription)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Winner Name</strong></td>
                <td>@Html.DisplayFor(model => model.WinnerName)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Total Score</strong></td>
                <td>@Html.DisplayFor(model => model.TotalScore)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Rank</strong></td>
                <td>@Html.DisplayFor(model => model.Rank)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Comments</strong></td>
                <td>@Html.DisplayFor(model => model.Comments)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Published</strong></td>
                <td>
                    <input type="checkbox" disabled="disabled" @(Model.IsPublished == true ? "checked" : "") />
                </td>
            </tr>
            <tr class="bg-light">
                <td><strong>Category</strong></td>
                <td>@Html.DisplayFor(model => model.Category)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Prize</strong></td>
                <td>@Html.DisplayFor(model => model.Prize)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Prize Description</strong></td>
                <td>@Html.DisplayFor(model => model.PrizeDescription)</td>
            </tr>
            <tr class="bg-light">
                <td><strong>Contest</strong></td>
                <td>@Html.DisplayFor(model => model.Contest.ContestName)</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
</div>