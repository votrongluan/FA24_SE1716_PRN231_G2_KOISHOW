@model KoiShow.Data.Models.Animal

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Animal</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnimalName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImgLink)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImgLink" alt="Animal Image" style="max-width: 100px; max-height: 100px;" onerror="this.onerror=null; this.src='https://i.ibb.co/4pW8ThB/240526771-1181446925711298-326622624622419047-n.jpg';" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeathStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeathStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @(Model.Gender == 1 ? "Đực" : "Cái")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Variety)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Variety.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
